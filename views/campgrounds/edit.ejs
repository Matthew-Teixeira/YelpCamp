<% layout('layout/boilerplate') %>
       
        <form action="/campgrounds/<%=foundCamp._id%>?_method=PUT" method="post">
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="campground[title]" value="<%=foundCamp.title%>">
            </div>
            <div>
                <label for="location">Location</label>
                <input type="text" id="location" name="campground[location]" value="<%=foundCamp.location%>">
            </div>
            <button>Update Campground</button>
        </form>

        
        <div class="row">
            <h1 class="text-center">New Campground</h1>
            <div class="col-6 offset-3">
                <form action="/campgrounds/<%=foundCamp._id%>?_method=PUT" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" value="<%=foundCamp.title%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)" name="campground[price]" value="<%=foundCamp.price%>">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" value="<%=foundCamp.location%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Image URL</label>
                        <input class="form-control" type="text" id="image" name="campground[image]" value="<%=foundCamp.image%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="campground[description]"><%=foundCamp.description%></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Update</button>
                    </div>
                </form>
                <a href="/campgrounds/<%=foundCamp._id%>">Back To Campground</a>
            </div>
        </div>